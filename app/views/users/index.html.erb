<h1 class="text-center mt-4"><strong> Blogger's List </strong></h1>  

<% @users.each do |user| %>
<div class="row justify-content-md-center ">
    <div class="col-8 mt-4">
      <div class="card text-center shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-header">
           <%= link_to user.user_name, user %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to gravator_for user, user %></h5>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-primary" %>
            <%= link_to "View", user, class: "btn btn-outline-success" %>

        </div>
        <div class="card-footer text-muted">
          Join:<%= time_ago_in_words(user.created_at) %> 
        </div>
      </div>
    </div>
  </div>
<%end%>

<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @users %>
  </div>
   <%= will_paginate @users, :container => false %>
</div>
