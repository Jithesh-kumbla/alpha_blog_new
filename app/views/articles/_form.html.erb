<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class: "col-2 col-form-label" %> 
             <div class="col-10">
              <%= f.text_field :title, class: "form-control shadow rounded" %>
             </div> 
          </div> 

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Make your selections"}, {multiple: true, size: 5,class: "custom-select shadow rounded"} ) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-success" %>
        </div>
    <%= link_to 'Return to Main Page', articles_path, class: "justify-content-center" %>
      <% end %>
    </div>
  </div>
</div>