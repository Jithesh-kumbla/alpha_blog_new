<h1 class="text-center mt-4"> Create a new Category </h1>

<div class="container">
	<div class="row justify-content-center">
	    <div class="col-10">
	      <%= render 'shared/errors', obj: @category %>
	      <%= form_with(model: @category, local: true) do |f| %>
	          <div class="form-group row">
	            <%= f.label :name,"Categry Name", class: "col-2 col-form-label" %> 
	             <div class="col-10">
	              <%= f.text_field :name, class: "form-control" %>
	             </div> 
	          </div> 
	        <div class="form-group row justify-content-center">
	          <%= f.submit class: "btn btn-outline-success" %>
	        </div>
	    <%= link_to 'Return to Main Page', articles_path, class: "justify-content-center" %>
	      <% end %>
	    </div>
	</div>
</div>